{
    "compilerOptions": {
        "module": "esnext", // 打包模块类型
        "declaration": true, // 默认不要声明文件
        "noImplicitAny": true, // 支持类型不标注可以默认any
        "removeComments": true, // 删掉注释
        "moduleResolution": "bundler", // 按照 node 模块来解析
        "types": ["node"],
        "esModuleInterop": true, // 支持 es6, commonjs 模块
        "jsx": "preserve", // jsx 不转
        "jsxImportSource": "vue",
        "noLib": false, // 不处理类库
        "target": "es6", // 遵循 es6 版本
        "sourceMap": true,
        "lib": [
            // 编译时用到库
            "ESNext",
            "DOM"
        ],
        "allowSyntheticDefaultImports": true, // 允许没有导出的模块中导入
        "experimentalDecorators": true, // 装饰器语法
        "forceConsistentCasingInFileNames": true, // 强制区分大小写
        "resolveJsonModule": true, // 解析 json 模块
        "strict": true, // 启动严格模式
        "skipLibCheck": true, // 跳过类库检测
        "emitDeclarationOnly": true,
        "baseUrl": ".",
        "paths": {
            "@mealcomes/components": ["packages/components"],
            "@mealcomes/components/*": ["packages/components/*"],
            "@mealcomes/utils": ["packages/utils"],
            "@mealcomes/utils/*": ["packages/utils/*"],
            "@mealcomes/constants": ["packages/constants"],
            "mealcomes": ["packages/mealcomes"],
            "/": ["./"]
        }
    },
    "exclude": [
        // 排除的类库
        "node_modules",
        "**/__tests__",
        "dist/**",
        "**/*.config.ts"
    ],
    "include": [
        "packages/components/index.ts",
        "packages/components/**/*.ts",
        "packages/components/**/*.vue",
        "packages/mealcomes/**/*",
        "packages/utils/**/*.ts",
        "packages/constants/**/*.ts"
    ]
}
